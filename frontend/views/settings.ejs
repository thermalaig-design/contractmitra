    <style>
        /* WhatsApp Style Profile Picture Upload */
        .profile-picture-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            padding: 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            margin-bottom: 30px;
        }

        .profile-picture-wrapper {
            position: relative;
            width: 150px;
            height: 150px;
        }

        .profile-picture-container {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            border: 5px solid white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            cursor: pointer;
            transition: all 0.3s ease;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .profile-picture-container:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
        }

        .profile-picture-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

        .profile-picture-preview.active {
            display: block;
        }

        .profile-picture-placeholder {
            font-size: 60px;
            color: #667eea;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            background: #f0f0f0;
        }

        .profile-picture-placeholder.hidden {
            display: none;
        }

        .camera-overlay {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 45px;
            height: 45px;
            background: #25D366;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            border: 3px solid white;
        }

        .camera-overlay:hover {
            transform: scale(1.1);
            background: #20BA5A;
        }

        .camera-overlay i {
            color: white;
            font-size: 20px;
        }

        .profile-picture-input {
            display: none;
        }

        .profile-name-display {
            color: white;
            font-size: 24px;
            font-weight: 600;
            text-align: center;
            margin-top: 10px;
        }

        .profile-email-display {
            color: rgba(255, 255, 255, 0.9);
            font-size: 14px;
            text-align: center;
        }

        /* Fancy Form Design */
        .fancy-form-container {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }

        .form-section {
            margin-bottom: 40px;
        }

        .form-section-title {
            font-size: 20px;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 3px solid #667eea;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-section-title i {
            color: #667eea;
            font-size: 24px;
        }

        .form-grid-2 {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 25px;
        }

        .fancy-form-group {
            position: relative;
        }

        .fancy-input {
            width: 100%;
            padding: 16px 16px 16px 45px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8fafc;
            font-family: inherit;
        }

        .fancy-input:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .fancy-input:focus + .fancy-label {
            color: #667eea;
            transform: translateY(-32px) scale(0.85);
        }

        .fancy-input:not(:placeholder-shown) + .fancy-label {
            transform: translateY(-32px) scale(0.85);
        }

        .fancy-label {
            position: absolute;
            left: 45px;
            top: 18px;
            color: #64748b;
            font-size: 15px;
            transition: all 0.3s ease;
            pointer-events: none;
            background: white;
            padding: 0 8px;
            font-weight: 500;
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 18px;
            color: #667eea;
            font-size: 18px;
        }

        .fancy-textarea {
            width: 100%;
            padding: 16px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 15px;
            transition: all 0.3s ease;
            background: #f8fafc;
            font-family: inherit;
            resize: vertical;
            min-height: 120px;
        }

        .fancy-textarea:focus {
            outline: none;
            border-color: #667eea;
            background: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        /* Fancy Checkbox */
        .fancy-checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .fancy-checkbox {
            position: relative;
        }

        .fancy-checkbox input[type="checkbox"] {
            display: none;
        }

        .fancy-checkbox-label {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #f8fafc;
            font-weight: 500;
            color: #64748b;
        }

        .fancy-checkbox input[type="checkbox"]:checked + .fancy-checkbox-label {
            border-color: #667eea;
            background: #667eea;
            color: white;
        }

        .fancy-checkbox-label i {
            font-size: 16px;
        }

        /* Save Button */
        .save-profile-btn {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            margin-top: 30px;
        }

        .save-profile-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
        }

        .save-profile-btn:active {
            transform: translateY(0);
        }

        /* Success/Error Messages */
        .message-box {
            padding: 16px 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            display: none;
            align-items: center;
            gap: 12px;
            font-weight: 500;
            animation: slideIn 0.3s ease;
        }

        .message-box.success {
            background: #dcfce7;
            color: #166534;
            border-left: 4px solid #22c55e;
        }

        .message-box.error {
            background: #fee2e2;
            color: #991b1b;
            border-left: 4px solid #ef4444;
        }

        .message-box.show {
            display: flex;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Loading State */
        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 9999;
            align-items: center;
            justify-content: center;
        }

        .loading-overlay.active {
            display: flex;
        }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .fancy-form-container {
                padding: 25px;
            }

            .form-grid-2 {
                grid-template-columns: 1fr;
            }
        }
    </style>
