                            </div>
                            
                            <div class="fancy-form-group">
                                <label class="toggle-switch">
                                    <input type="checkbox" id="deadlineNotificationsEnabled" name="deadlineNotificationsEnabled" checked>
                                    <span class="slider"></span>
                                    <span class="label-text">Deadline Reminders</span>
                                </label>
                                <p class="help-text">Get notified about upcoming deadlines</p>
                            </div>
                            
                            <div class="fancy-form-group">
                                <label class="toggle-switch">
                                    <input type="checkbox" id="taskRemindersEnabled" name="taskRemindersEnabled" checked>
                                    <span class="slider"></span>
                                    <span class="label-text">Task Reminders</span>
                                </label>
                                <p class="help-text">Receive reminders for pending tasks</p>
                            </div>
                        </div>
                        
                        <!-- Frequency Settings -->
                        <div class="form-section">
                            <h2 class="form-section-title">
                                <i class="fas fa-clock"></i>
