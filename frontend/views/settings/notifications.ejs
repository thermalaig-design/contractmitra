                    <div class="section-header">
                        <h1 class="section-title">Email Notifications</h1>
                        <p class="section-subtitle">Manage your email notification preferences</p>
                    </div>

                    <form id="emailPreferencesForm" class="fancy-form-container" style="margin-top: 20px;">
                        <!-- Notification Settings -->
                        <div class="form-section">
                            <h2 class="form-section-title">
                                <i class="fas fa-bell"></i>
